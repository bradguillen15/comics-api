extends layout

block content
    h1= title
    p Bienvenido

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 Informacion de usuarios
            p
                strong Cantidad:
                |  <span id='userInfoName'></span>
                br
                strong Activos:
                |  <span id='userInfoAge'></span>
                br
                strong Ultimo registrado:
                |  <span id='userInfoGender'></span>
        // /USER INFO

        // USER LIST
        h2 Usuarios registrados
        #userList
            table#tablaUsuarios
                thead
                    th ID
                    th Nombre
                    th Email
                    th Borrar
                tbody
        // /USER LIST

        // PUBLICACIONES LIST

        h2 Publicaciones
        #publisList
            table#tablaPublis
                thead
                    th Titulo
                    th Estado
                    th ID Usuarios
                    th Fecha Publicacion
                    th Borrar
                tbody
        // /PUBLICACIONES LIST

    // /WRAPPER